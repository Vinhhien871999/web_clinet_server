@using CNWeb.Models
@{
    ViewBag.Title = "PayMent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    List<Cart_detail> lsItem = ViewBag.listItem;
}

@if (lsItem == null)
{
    <h1>@ViewBag.Error</h1>
}
else
