@using CNWeb.Models
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<Product>

<div class="row bg-title">
    <div class="col-lg-12">
        <h4 class="page-title">Danh sách Sản Phẩm</h4>
        <ol class="breadcrumb">
            <li><a href="#">Dashboard</a></li>
            <li class="active">Sản Phẩm</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="border container-fluid">

    <div class="col-lg-12 border">

        <div class="col-lg-4">
            <a href="/Admin/CreateProduct" class="btn btn-success">+ Tạo mới</a>
        </div>
        <div class="col-lg-4">
            <form class="form-inline">
                <div class="form-group mx-sm-3 mb-2">
                    <label for="search" class="sr-only">Tên Loại</label>
                    <input type="password" class="form-control" id="search" placeholder="Tên Loại ...">
                </div>
                <button type="submit" class="btn btn-primary mb-2">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                    </svg> Tìm kiếm
                </button>
            </form>
        </div>
    </div>
    <table class="table" style="margin-top: 80px;">
        <thead class="thead-dark">
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Image</th>
                <th scope="col">Tên</th>
                <th scope="col">Giới tính</th>
                <th scope="col">Thể Loại cha</th>
                <th scope="col">Giá</th>
                <th scope="col">Số lượng</th>
                <th scope="col">Trạng thái</th>
                <th scope="col">Chỉnh Sửa</th>
                <th scope="col">Xóa</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (Product p in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td><img src="../images/@p.photo.Split(';')[0]" alt="..." width="100px" height="100px" class="mg-thumbnail"></td>
                    <td>@p.product_name</td>
                    @if (p.sex == 1)
                    {
                        <td>Nam</td>
}
                    else
                    {
                        <td>Nữ</td>
                    }

                    <td>@p.Product_category.name</td>


                    <td>@p.price</td>


                    <td>@p.stock</td>


                    <td>

                            @if (p.stock > 0)
                            {
                                    <p class="text-success">Còn hàng</p>
                            }
                            else
                            {
                                <p class="text-danger">Hết Hàng</p>
                            }

                    </td>
                    <td>
                        <button type="button" class="btn btn-primary">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                            </svg> Sửa
                        </button>
                    </td>
                    <td>
                        <a href="/Admin/Delete/@p.id" class="btn btn-danger ">
                            <svg width="1em " height="1em " viewBox="0 0 16 16 " class="bi bi-trash " fill="currentColor " xmlns="http://www.w3.org/2000/svg ">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z " />
                                <path fill-rule="evenodd " d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0
                                1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z " />
                            </svg> Xóa
                        </a>
                    </td>
                </tr>
                i++;
            }

        </tbody>
    </table>
</div>