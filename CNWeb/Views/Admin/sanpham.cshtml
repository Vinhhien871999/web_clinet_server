    <td>
        @Html.DisplayFor(modelItem => item.status)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.viewCount)
    </td>
    <td>
        <img src="@Url.Content("~/images/"+ listpicture[0])" alt="" class="pro-image-front" style="width:100px ; height:100px">
    </td>
    <td>
        @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { @id = item.id }) |
