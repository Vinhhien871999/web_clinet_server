@using CNWeb.Models
@{
    ViewBag.Title = "HandlePayment";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<formPayment>

<div class="row bg-title">
    <div class="col-lg-12">
        <h4 class="page-title">Danh sách đơn hàng</h4>
        <ol class="breadcrumb">
            <li><a href="#">Dashboard</a></li>
            <li class="active">Đơn hàng</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- row -->
<!-- <div class="row"> -->
<div class="border container-fluid">

    <div class="col-lg-12 center-block">
        <div class="col-lg-3"></div>
        <div class="col-lg-8 ">
            <form class="form-inline">
                <div class="form-group mx-sm-3 mb-2">
                    <label for="name" class="sr-only">Tên Khách Hàng</label>
                    <input type="text" class="form-control" id="name" placeholder="Tên Khách Hàng">
                </div>
                <div class="form-group">
                    <select class="form-control" id="sel1">
                        <option selected>Trạng Thái</option>
                        <option>Đang đóng gói</option>
                        <option>Chưa đóng gói</option>
                        <option>Đang xuất kho</option>
                    </select>
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <select class="form-control" id="sel1">
                        <option selected>Chọn nhân viên giao</option>
                        <option>Nhân viên 1</option>
                        <option>Nhân viên 2</option>
                        <option>Nhân viên 3</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mb-2">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                    </svg> Lọc
                </button>
            </form>
        </div>
    </div>
    <table class="table" style="margin-top: 80px;">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Mã đơn hàng</th>
                <th scope="col">Tên KH</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Tổng tiền</th>
                <th scope="col">Chi tiết</th>
                <th scope="col">Ngày Tạo</th>
                <th scope="col">Trạng thái</th>
                <th scope="col">Người Giao</th>
                <th scope="col">Xóa</th>
            </tr>
        </thead>
        <tbody>
            @foreach(formPayment item in Model)
            {
            <tr>
                <th scope="row">@item.id</th>
                <td>@item.User.name</td>
                <td>@item.User.phone</td>
                <td>@item.total</td>
                <td><a style="color: blue;" href="#">Chi tiết</a></td>
                <td>@item.create_at</td>
                <td class="text-danger">@item.status</td>
                <td>
                    <div class="form-group row col-sm-11">

                        <select id="shipper" class="form-control">
                            <option>Shipper 1</option>
                            <option>Shipper 2</option>
                            <option>Shipper 3</option>
                        </select>

                    </div>
                </td>

                <td>
                    <button type="button" class="btn btn-danger ">
                        <svg width="1em " height="1em " viewBox="0 0 16 16 " class="bi bi-trash " fill="currentColor " xmlns="http://www.w3.org/2000/svg ">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z " />
                            <path fill-rule="evenodd " d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0
                                1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z " />
                        </svg> Xóa
                    </button>
                </td>
            </tr>   
            }
            
        </tbody>
    </table>
</div>

